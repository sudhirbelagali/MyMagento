<config>
    <tabs>
        <clarion translate="label" module="contactsgooglemap">
            <label>Contactsgooglemap Configuration</label>
            <sort_order>20</sort_order>
        </clarion>
    </tabs>
	<sections>
		<contactsgooglemap translate="label" module="contactsgooglemap">
			<label>Contacts Form Googlemap</label>
			<tab>general</tab>
			<frontend_type>text</frontend_type>
			<sort_order>377</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
                		<contactsgooglemap translate="label" module="contactsgooglemap">
					<label>Enable or Disable Module</label>
					<frontend_type>text</frontend_type>
					<sort_order>240</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						
                                                <enable translate="label">
							<label>Enable:</label>
							<comment></comment>
							<frontend_type>select</frontend_type>
							<sort_order>112</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
                                                        <source_model>adminhtml/system_config_source_enabledisable</source_model>
						</enable>
                                                <contactsgooglemapapikey translate="label">
							<label>Map Api Url</label>
							<comment>Put api url Here(like http://maps.google.com/maps/api/js?sensor=true)</comment>
							<frontend_type>text</frontend_type>
							<sort_order>115</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
						</contactsgooglemapapikey>
                                                
                                                <contactsgooglemapaddress translate="label">
							<label>Address:</label>
							<comment>Put your store address Here</comment>
							<frontend_type>textarea</frontend_type>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
						</contactsgooglemapaddress>
                                                <contactsgooglemapheight translate="label">
							<label>Height:</label>
							<comment>Put Google Map Height</comment>
							<frontend_type>text</frontend_type>
							<sort_order>130</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
							<!--<source_model>allcurrency/type</source_model>-->
						</contactsgooglemapheight>
                                                
                                               <contactsgooglemappagelayout translate="label">
							<label>Page layout</label>
							<comment>you can change contact us page layout</comment>
							<frontend_type>select</frontend_type>
							<sort_order>130</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
							<source_model>contactsgooglemap/layoutoptions</source_model>
						</contactsgooglemappagelayout>
                                                 
                                                <contactsgooglemapmarkerimg translate="label">
							<label>Marker Image:</label>
							<comment>Put Marker Image</comment>
							<frontend_type>image</frontend_type>
                                                        <backend_model>adminhtml/system_config_backend_image</backend_model>
                                                        <upload_dir config="system/filesystem/media" scope_info="1">map/images</upload_dir>
                                                        <base_url type="media" scope_info="1">map/images</base_url>
							<sort_order>140</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
							<!--<source_model>allcurrency/type</source_model>-->
						</contactsgooglemapmarkerimg>
                                               
					</fields>
                                        
                                   </contactsgooglemap>
                                     
                                    
			</groups>        
                        
                        
		</contactsgooglemap>
	</sections>
</config>